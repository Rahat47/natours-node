{
    "name": "natours-node",
    "version": "1.0.0",
    "description": "Natours Project Made with Node.js, Express, MongoDB and Pug",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "start": "nodemon -r dotenv/config server.js",
        "debug": "ndb server.js",
        "watch:js": "parcel watch ./public/js/index.js --dist-dir ./public/dist",
        "build:js": "parcel build ./public/js/index.js "
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Rahat47/natours-node.git"
    },
    "targets": {
        "default": {
            "distDir": "./public/js/bundle"
        }
    },
    "keywords": [
        "Natours",
        "Node",
        "Express",
        "Backend"
    ],
    "author": "Rahat",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/Rahat47/natours-node/issues"
    },
    "homepage": "https://github.com/Rahat47/natours-node#readme",
    "dependencies": {
        "@babel/polyfill": "^7.12.1",
        "axios": "^0.24.0",
        "bcryptjs": "^2.4.3",
        "chalk": "^3.0.0",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-mongo-sanitize": "^2.1.0",
        "express-rate-limit": "^5.2.6",
        "helmet": "^4.6.0",
        "hpp": "^0.2.3",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.12.3",
        "morgan": "^1.10.0",
        "nodemailer": "^6.5.0",
        "nodemon": "^2.0.7",
        "pug": "^3.0.2",
        "slugify": "^1.5.0",
        "validator": "^13.5.2",
        "xss-clean": "^0.1.1"
    },
    "devDependencies": {
        "parcel": "^2.0.0"
    }
}
